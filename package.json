    "@types/chai": "^4.3.14",
    "@types/chai-as-promised": "^7.1.8",
    "@types/gulp": "^4.0.17",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.13.0",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "ansi-regex": ">=6.1.0",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
